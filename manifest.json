{
	"manifest_version": 2,
	"name": "No N-word Macedonia",
	"version": "0.9",

	"developer": {
		"name": "Dimithrandir",
		"url": "https://github.com/Dimithrandir"
	},

	"description": "Detect and redact the N-word before Macedonia.",

	"icons": {
		"16": "nnm-16.png",
		"32": "nnm-32.png",
		"48": "nnm-48.png",
		"64": "nnm-64.png"
	},

	"permissions": [
		"tabs",
		"storage"
	],
	
	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["content.css"],
			"js": ["content.js"]
		}
	],

	"browser_action": {
		"default_title": "No N-word Macedonia",
		"default_popup": "popup.html"
	},

	"web_accessible_resources": [
		"n-words.json"
	]
}
